
<div class="container">
  <div data-controller="time">
    <h1>Display Time</h1>
    <%= time_zone_select "time_zone", "time_zone", TZInfo::Timezone.all.sort, {include_blank: false}, {data: {target: 'time.time_zone', action: 'change->time#changed_zone'}} %>
    <h2 data-target="time.display_time">Time to Display</h2>
    <h3 data-target="time.display_time_zone">Time Zone to Display</h3>
    <div class="row">
      <button class="btn btn-primary" data-action="click->time#set_previous_time_zone">Previous Time Zone</button>
    </div>
  </div>

</div>